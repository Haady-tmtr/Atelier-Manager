{% extends 'base.html.twig' %}

{% block title %}Liste des Ateliers{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2 class="mb-3">Index des Ateliers</h2>

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
            <tr>
                <th>Nom</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {% for atelier in ateliers %}
                <tr>
                    <td>{{ atelier.nom }}</td>
                    <td>{{ atelier.description | markdown | raw }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2" class="text-center">Aucun atelier trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <!-- Bouton Retour stylisé et centré -->
        <div class="d-flex justify-content-center mt-3">
            <a href="{{ path('app_atelier_index') }}" class="btn btn-secondary">
                Retour à la liste détaillée
            </a>
        </div>
    </div>
{% endblock %}
