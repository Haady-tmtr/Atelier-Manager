{% extends 'base.html.twig' %}

{% block title %}Desinscription{{ atelier.nom }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2 class="mb-3 text-primary">Vous êtes sur le point de vous desinscrire à l'atelier : </h2>

        <table class="table table-striped table-bordered">
            <tbody>
            <tr>
                <th class="table-dark">ID</th>
                <td>{{ atelier.id }}</td>
            </tr>
            <tr>
                <th class="table-dark">Nom</th>
                <td>{{ atelier.nom }}</td>
            </tr>
            <tr>
                <th class="table-dark">Description</th>
                <td>{{ atelier.description | markdown | raw }}</td>
            </tr>
            </tbody>
        </table>

        <!-- Boutons d'action alignés -->
        <div class="d-flex justify-content-center gap-3 mt-4">
            <form action="{{ path('app_atelier_desinscription', {'id': atelier.id}) }}" method="post">
                <button type="submit" class="btn btn-danger btn-sm">Se désinscrire</button>
            </form>

            <a href="{{ path('app_atelier_index') }}" class="btn btn-secondary">Annuler</a>
        </div>
    </div>
{% endblock %}